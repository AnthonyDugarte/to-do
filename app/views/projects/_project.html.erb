<div data-model="<%= project.class.name %>" data-id="<%= project.id %>" class="flex flex-col flex-auto flex-shrink-0 border-l border-r border-gray-400 w-full">
    <div class="px-6 py-4">
      <h2 data-field="name" class="font-bold text-2xl">
        <%= project.name %>
      </h2>
    </div>

    <div class="px-6">
      <%= link_to 'Edit', edit_project_path(project) %> |
      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

</div>