<div data-model="<%= line.class.name %>" data-id="<%= line.id %>" class="flex flex-col flex-auto flex-shrink-0 border-l border-r border-gray-400 w-full md:w-1/2 lg:w-1/3 xl:w-1/4">
    <div class="px-6 py-4">
      <h2 data-field="name" class="font-bold text-2xl">
        <%= line.name %>
      </h2>
    </div>

    <div class="px-6">
      <%= link_to 'Edit', edit_line_path(line), remote: true %> |
      <%= link_to 'Destroy', line, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
    </div>

    <div class="px-6 py-4 flex-1">
      <%= render line.tasks, line: line %>
    </div>

    <%= link_to 'New Task', [:new, line, :task], class: "px-6 block bg-gray-200" %>
</div>