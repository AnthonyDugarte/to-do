<% project ||= nil %>

<div data-model="<%= line.class.name %>" data-id="<%= line.id %>" class="flex flex-col flex-auto flex-shrink-0 border-l border-r border-gray-400 w-full md:w-1/2 lg:w-1/3 xl:w-1/4">
      <div class="px-6 py-4">
        <h2 data-field="name" class="font-bold text-2xl">
          <%= line.name %>
        </h2>
      </div>

      <div class="px-6">
        <%= link_to 'Edit', url_for([:edit, project, line]), remote: true %> |
        <%= link_to 'Destroy', url_for([project, line]), method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
      </div>

    <div class="overflow-y-auto flex-1">
      <div data-container="<%= Task.name %>" class="px-6 py-4">
        <%= render line.tasks, line: line, lines: project&.lines, project: project %>
      </div>
    </div>

    <%= link_to 'New Task', [:new, project, line, :task], remote: true, class: "px-6 block bg-gray-200" %>
</div>